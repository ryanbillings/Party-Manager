<table class="datagrid">
  <thead class="datagrid">
    <th width="90">Guest</th>
  </thead>
<%  @invitations = Invitation.for_party(@invitation.party).all.paginate :page => params[:page], :per_page => 5 %> 
<% for i in @invitations %>
<% @guest=Guest.find(i.guest_id).name %>
  <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
    <td align="left">&nbsp;<%= link_to @guest, guest_path(i.guest_id) %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @invitations, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>