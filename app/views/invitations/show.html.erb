<% title "Invitation" %>
<p>
  <strong>Party:</strong>
  <%= @party.name %>
</p>
<p>
  <strong>Guest:</strong>
  <%= @guest.name %>
</p>
<p>
  <strong>Invite Code:</strong>
  <%= @invitation.invite_code %>
</p>
<p>
  <strong>Expected Attendees:</strong>
  <%= @invitation.expected_attendees %>
</p>
<p>
  <strong>Actual Attendees:</strong>
  <%= @invitation.actual_attendees %>
</p>

<p>
  <%= link_to "Edit", edit_invitation_path(@invitation) %> |
  <%= link_to "Destroy", @invitation, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", invitations_path %>
</p>
